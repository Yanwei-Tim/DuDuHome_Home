<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/button_back_selector" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button_dial_keyboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_dial_keyboard_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/dial_keyboard"
                android:textColor="@color/default_select"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_contacts_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/contacts"
                android:textColor="@color/white"
                android:textSize="16sp" />


        </LinearLayout>

    </LinearLayout>

    <TableLayout
        android:id="@+id/number_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/number_table_marginLeft"
        android:layout_marginTop="4dp">

        <TableRow>

            <Button
                android:id="@+id/button_one"
                style="@style/dial_button_style"
                android:background="@drawable/button_one_selector"
                android:tag="1" />

            <Button
                android:id="@+id/button_two"
                style="@style/dial_button_style"
                android:background="@drawable/button_two_selector"
                android:tag="2" />

            <Button
                android:id="@+id/button_three"
                style="@style/dial_button_style"
                android:background="@drawable/button_three_selector"
                android:tag="3" />

            <Button
                android:id="@+id/button_well"
                style="@style/dial_button_style"
                android:background="@drawable/button_well_selector"
                android:tag="#" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button_four"
                style="@style/dial_button_style"
                android:background="@drawable/button_four_selector"
                android:tag="4" />

            <Button
                android:id="@+id/button_five"
                style="@style/dial_button_style"
                android:background="@drawable/button_five_selector"
                android:tag="5" />

            <Button
                android:id="@+id/button_six"
                style="@style/dial_button_style"
                android:background="@drawable/button_six_selector"
                android:tag="6" />

            <Button
                android:id="@+id/button_zero"
                style="@style/dial_button_style"
                android:background="@drawable/button_zero_selector"
                android:tag="0" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button_seven"
                style="@style/dial_button_style"
                android:background="@drawable/button_seven_selector"
                android:tag="7" />

            <Button
                android:id="@+id/button_eight"
                style="@style/dial_button_style"
                android:background="@drawable/button_eight_selector"
                android:tag="8" />

            <Button
                android:id="@+id/button_nine"
                style="@style/dial_button_style"
                android:background="@drawable/button_nine_selector"
                android:tag="9" />

            <Button
                android:id="@+id/button_rice"
                style="@style/dial_button_style"
                android:background="@drawable/button_rice_selector"
                android:tag="*" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

                <Button
                    android:id="@+id/button_dial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/button_dial_selector" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/dial_digits"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:background="@android:color/transparent"
                        android:cursorVisible="false"
                        android:editable="true"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif-light"
                        android:freezesText="true"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tv_phone_number_textSize"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/delete_button"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/button_bt_delete_selector"
                        android:visibility="invisible" />
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/bt_name"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />
            <EditText
                android:id="@+id/editText_bt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AIO Car"
                android:background="@android:color/transparent"
                android:singleLine="true"
                android:maxLength="12"
                android:cursorVisible="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />
            <TextView
                android:id="@+id/textView_bt_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/bt_name_edit"
                android:gravity="center"
                android:textColor="@color/default_select"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
